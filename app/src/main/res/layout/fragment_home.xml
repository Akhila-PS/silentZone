<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_silent_zone"
                    android:background="@drawable/circle_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Silent Zone"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Automatically silence your phone when you're at specific locations"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/white_70"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/white_20"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Status"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/white"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/locationText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No silent zone set"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/white_70"
                            android:background="@drawable/rounded_background"
                            android:padding="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonClearLocation"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="8dp"
                            app:icon="@drawable/ic_delete"
                            app:iconTint="@color/error"
                            app:backgroundTint="@android:color/transparent"
                            app:cornerRadius="24dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/error"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSetZone"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Set Current Location as Silent Zone"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    app:icon="@drawable/ic_location_on"
                    app:iconGravity="textStart"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/on_primary"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPickFromMap"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Pick Location from Map"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    app:icon="@drawable/ic_map"
                    app:iconGravity="textStart"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/secondary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />



            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabQuickSilent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        app:srcCompat="@drawable/ic_quick_silent"
        app:backgroundTint="@color/primary"
        app:tint="@color/on_primary"
        app:fabSize="normal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
